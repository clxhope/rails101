<div class="row">
  <div class="col-sm-12 col-md-12  col-md-offset-0">
   <%= form_tag search_groups_path, :method => :get, :class => "groups-search-form" do %>
     <div class="input-group">
       <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="搜索电影关键字...">

       <span class="input-group-btn">
         <button type="submit" class="btn btn-default">
           <span class="glyphicon glyphicon-search"></span>
         </button>
       </span>
     </div>
   <% end %>
 </div>


</div>
